#!/usr/bin/env sh

echo "ğŸ” Running pre-commit checks..."

# Run format
echo "ğŸ“ Formatting code..."
npm run format

# Check if any files were modified by prettier
if ! git diff --quiet; then
  echo "ğŸ”„ Files were formatted. Adding changes..."
  git add -A
fi

# Run lint with auto-fix
echo "ğŸ”§ Running linter with auto-fix..."
npx eslint . --ext .ts,.tsx --fix

# Check if any files were modified by eslint
if ! git diff --quiet; then
  echo "ğŸ”„ Files were auto-fixed by ESLint. Adding changes..."
  git add -A
fi

# Run lint again to check for remaining issues
echo "ğŸ” Checking for remaining lint issues..."
npm run lint

# Check if lint was successful
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix the issues manually and try again."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test

# Check if tests were successful
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the issues and try again."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"